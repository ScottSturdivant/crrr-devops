[iredmail]
listen	= {{ iredmail_socket }}
user	= www-data
group	= www-data
pm	= dynamic
pm.max_children		= 30
pm.start_servers	= 4
pm.min_spare_servers	= 2
pm.max_spare_servers	= 6
pm.max_requests		= 500
php_admin_value[display_errors]	= On
php_admin_value[memory_limit]	= 64M
php_admin_value[suhosin.session.encrypt] = Off
php_admin_value[log_errors]	= On
php_admin_value[error_log]	= /var/log/php5-fpm-iRedMail.log
php_admin_value[date.timezone]	= America/Denver
